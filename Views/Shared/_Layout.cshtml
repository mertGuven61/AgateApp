<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agate</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgateApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white sticky-top border-bottom">
            <div class="container">
                <a class="navbar-brand fw-semibold" asp-area="" asp-controller="Dashboard" asp-action="Index">
                    Agate
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link fw-semibold" asp-area="" asp-controller="Dashboard" asp-action="Index">
                                Dashboard
                            </a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Campaigns" asp-action="Index">
                                    Campaigns
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Adverts" asp-action="Index">
                                    Adverts
                                </a>
                            </li>
                            <li class="nav-item border-start ms-2 ps-2">
                                <a class="nav-link text-danger fw-semibold"
                                   asp-area="Identity"
                                   asp-page="/Account/Register">
                                    <i class="bi bi-person-plus-fill"></i> New User
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin") || User.IsInRole("ClientContact"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Clients" asp-action="Index">
                                    Clients
                                </a>
                            </li>
                        }

                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="app-bg">
        <div class="container py-4">
            <main role="main">
                <div class="content-card">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <footer class="border-top py-3">
        <div class="container d-flex justify-content-between align-items-center text-muted small">
            <span>&copy; 2025 - Agate</span>
            <span class="d-none d-sm-inline">Minimal Light UI</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
