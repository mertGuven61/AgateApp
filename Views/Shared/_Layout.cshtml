<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agate</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgateApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg bg-white sticky-top border-bottom"
             style="backdrop-filter: blur(8px);">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2 fw-semibold"
                   asp-area="" asp-controller="Dashboard" asp-action="Index">
                    <span class="d-inline-flex align-items-center justify-content-center rounded-3 border"
                          style="width: 28px; height: 28px; background: rgba(0,0,0,.02); border-color: rgba(0,0,0,.08) !important;">
                        <i class="bi bi-gem" style="color: rgba(17,24,39,.7);"></i>
                    </span>
                    <span>Agate</span>
                </a>

                <button class="navbar-toggler border-0 shadow-none" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto align-items-lg-center gap-lg-1">
                        <li class="nav-item">
                            <a class="nav-link fw-semibold d-flex align-items-center gap-2"
                               asp-area="" asp-controller="Dashboard" asp-action="Index">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center gap-2"
                                   asp-area="" asp-controller="Campaigns" asp-action="Index">
                                    <i class="bi bi-kanban"></i> Campaigns
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center gap-2"
                                   asp-area="" asp-controller="Adverts" asp-action="Index">
                                    <i class="bi bi-megaphone"></i> Adverts
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center gap-2"
                                   asp-area="" asp-controller="Clients" asp-action="Index">
                                    <i class="bi bi-building"></i> Clients
                                </a>
                            </li>

                            <li class="nav-item d-none d-lg-flex align-items-center">
                                <span class="mx-2" style="width:1px;height:20px;background:rgba(0,0,0,.10);"></span>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-danger fw-semibold d-flex align-items-center gap-2"
                                   asp-area="Identity"
                                   asp-page="/Account/Register">
                                    <i class="bi bi-person-plus-fill"></i> New User
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin") || User.IsInRole("ClientContact"))
                        {
                            
                        }
                    </ul>

                    <div class="d-flex align-items-center gap-2 ms-lg-3 mt-3 mt-lg-0">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="app-bg">
        <div class="container py-4">
            <main role="main">
                <div class="content-card">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <footer class="border-top py-3">
        <div class="container d-flex justify-content-center align-items-center text-muted small">
            <span>&copy; 2025 - Agate</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
