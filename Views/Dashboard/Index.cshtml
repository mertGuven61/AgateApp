@model AgateApp.Models.DashboardViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<AgateApp.SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Dashboard"];

    var clientsCount = Model.Clients?.Count ?? 0;
    var campaignsCount = Model.Campaigns?.Count ?? 0;
    var advertsCount = Model.Adverts?.Count ?? 0;

    // Payment summary
    var paidCount = 0;
    var partialCount = 0;
    var unpaidCount = 0;

    if (Model.Campaigns != null)
    {
        foreach (var c in Model.Campaigns)
        {
            if (c.ActualCost > 0 && c.AmountPaid >= c.ActualCost) paidCount++;
            else if (c.AmountPaid > 0) partialCount++;
            else unpaidCount++;
        }
    }
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h4 mb-1">@Localizer["Dashboard"]</h1>
        <div class="text-muted small">
            @Localizer["Dashboard_Subtitle"]
        </div>
    </div>

    <div class="d-flex gap-2">
        @if (User.IsInRole("Admin") || User.IsInRole("ClientContact"))
        {
            <a asp-controller="Clients" asp-action="Create" class="btn btn-sm btn-primary">
                <i class="bi bi-person-plus me-1"></i> @Localizer["Btn_AddClient"]
            </a>
        }

        @if (Model.SelectedClientId.HasValue && (User.IsInRole("Admin") || User.IsInRole("CampaignManager")))
        {
            <a asp-controller="Campaigns"
               asp-action="Create"
               asp-route-clientId="@Model.SelectedClientId"
               class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-plus-circle me-1"></i> @Localizer["Btn_NewCampaign"]
            </a>
        }

        @if (Model.SelectedCampaignId.HasValue && (User.IsInRole("Admin") || User.IsInRole("CampaignManager")))
        {
            <a asp-controller="Adverts"
               asp-action="Create"
               asp-route-campaignId="@Model.SelectedCampaignId"
               class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-plus-circle me-1"></i> @Localizer["Btn_NewAdvert"]
            </a>
        }
    </div>
</div>

<!-- KPI ROW -->
<div class="row g-3 mb-3">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="text-muted small">@Localizer["Col_Clients"]</div>
                        <div class="h4 mb-0">@clientsCount</div>
                    </div>
                    <div class="text-muted">
                        <i class="bi bi-building fs-4"></i>
                    </div>
                </div>
                <div class="text-muted small mt-2">@Localizer["Assigned_To_You"]</div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="text-muted small">@Localizer["Col_Campaigns"]</div>
                        <div class="h4 mb-0">@campaignsCount</div>
                    </div>
                    <div class="text-muted">
                        <i class="bi bi-kanban fs-4"></i>
                    </div>
                </div>
                <div class="text-muted small mt-2">
                    @if (Model.SelectedClientId.HasValue)
                    {
                        <span>@Localizer["For_Selected_Client"]</span>
                    }
                    else
                    {
                        <span>@Localizer["Select_Client_Short"]</span>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="text-muted small">@Localizer["Col_Adverts"]</div>
                        <div class="h4 mb-0">@advertsCount</div>
                    </div>
                    <div class="text-muted">
                        <i class="bi bi-megaphone fs-4"></i>
                    </div>
                </div>
                <div class="text-muted small mt-2">
                    @if (Model.SelectedCampaignId.HasValue)
                    {
                        <span>@Localizer["For_Selected_Campaign"]</span>
                    }
                    else
                    {
                        <span>@Localizer["Select_Campaign_Short"]</span>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="text-muted small">@Localizer["Payment_Status"]</div>
                        <div class="h6 mb-0">
                            <span class="badge bg-light text-success border me-1">@Localizer["Status_Paid"]: @paidCount</span>
                            <span class="badge bg-light text-warning border me-1">@Localizer["Status_PartiallyPaid"]: @partialCount</span>
                            <span class="badge bg-light text-secondary border">@Localizer["Status_Unpaid"]: @unpaidCount</span>
                        </div>
                    </div>
                    <div class="text-muted">
                        <i class="bi bi-cash-coin fs-4"></i>
                    </div>
                </div>
                <div class="text-muted small mt-2">
                    @Localizer["Payment_Based_On"]
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MAIN 3-COLUMN FLOW -->
<div class="row g-3">
    <!-- CLIENTS -->
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body p-0">
                <div class="p-3 border-bottom d-flex align-items-center justify-content-between">
                    <div class="fw-semibold">
                        <i class="bi bi-building me-2 text-muted"></i> @Localizer["Col_Clients"]
                    </div>

                    @if (User.IsInRole("Admin") || User.IsInRole("ClientContact"))
                    {
                        <a asp-controller="Clients" asp-action="Index" class="btn btn-sm btn-outline-secondary">
                            @Localizer["Btn_ViewAll"]
                        </a>
                    }
                </div>

                <div class="list-group list-group-flush">
                    @if (clientsCount == 0)
                    {
                        <div class="p-4 text-center text-muted small">
                            <i class="bi bi-inboxes fs-3 d-block mb-2"></i>
                            @Localizer["No_Clients"]
                        </div>
                    }
                    else
                    {
                        @foreach (var client in Model.Clients)
                        {
                            var activeClass = (client.Id == Model.SelectedClientId) ? "active" : "";
                            var textColor = (client.Id == Model.SelectedClientId) ? "text-white" : "text-dark";

                            <a asp-action="Index"
                               asp-route-clientId="@client.Id"
                               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @activeClass">

                                <div class="d-flex align-items-center gap-2">
                                    <i class="bi bi-briefcase @textColor"></i>
                                    <div>
                                        <div class="@textColor fw-semibold">@client.CompanyName</div>
                                        <div class="small @(client.Id == Model.SelectedClientId ? "text-white-50" : "text-muted")">
                                            @Localizer["Lbl_Id"]: @client.Id
                                        </div>
                                    </div>
                                </div>

                                @if (User.IsInRole("Admin") || User.IsInRole("ClientContact"))
                                {
                                    <span class="badge rounded-pill bg-light text-dark border">
                                        @Localizer["Btn_Edit"] <i class="bi bi-pencil-square"></i>
                                    </span>
                                }
                                else
                                {
                                    <i class="bi bi-chevron-right @textColor"></i>
                                }
                            </a>
                        }
                    }
                </div>

                @if (User.IsInRole("Admin") || User.IsInRole("ClientContact"))
                {
                    <div class="p-3 border-top">
                        <a asp-controller="Clients" asp-action="Create" class="btn btn-sm btn-primary w-100">
                            <i class="bi bi-person-plus-fill me-1"></i> @Localizer["Btn_AddClient"]
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- CAMPAIGNS -->
    <div class="col-lg-4">
        @if (Model.SelectedClientId.HasValue)
        {
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-0">
                    <div class="p-3 border-bottom d-flex align-items-center justify-content-between">
                        <div class="fw-semibold">
                            <i class="bi bi-kanban me-2 text-muted"></i> @Localizer["Col_Campaigns"]
                        </div>

                        <a asp-controller="Campaigns" asp-action="Index" class="btn btn-sm btn-outline-secondary">
                            @Localizer["Btn_ViewAll"]
                        </a>
                    </div>

                    <div class="list-group list-group-flush">
                        @if (campaignsCount == 0)
                        {
                            <div class="p-4 text-center text-muted small">
                                <i class="bi bi-inboxes fs-3 d-block mb-2"></i>
                                @Localizer["No_Campaigns"]
                            </div>
                        }
                        else
                        {
                            @foreach (var campaign in Model.Campaigns)
                            {
                                var activeClass = (campaign.Id == Model.SelectedCampaignId) ? "active" : "";
                                var textColor = (campaign.Id == Model.SelectedCampaignId) ? "text-white" : "text-dark";

                                <div class="list-group-item p-0 d-flex justify-content-between align-items-center @activeClass">
                                    <a asp-action="Index"
                                       asp-route-clientId="@Model.SelectedClientId"
                                       asp-route-campaignId="@campaign.Id"
                                       class="flex-grow-1 p-3 text-decoration-none @textColor">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <div class="fw-semibold">@campaign.Title</div>
                                                <div class="small @(campaign.Id == Model.SelectedCampaignId ? "text-white-50" : "text-muted")">
                                                    @Localizer["Lbl_Status"]: @campaign.Status
                                                </div>
                                            </div>

                                            @if (campaign.ActualCost > 0 && campaign.AmountPaid >= campaign.ActualCost)
                                            {
                                                <span class="badge bg-light text-success border border-success">@Localizer["Status_Paid"]</span>
                                            }
                                            else if (campaign.AmountPaid > 0)
                                            {
                                                <span class="badge bg-light text-warning border border-warning">@Localizer["Status_PartiallyPaid"]</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-light text-secondary border">@Localizer["Status_Unpaid"]</span>
                                            }
                                        </div>
                                    </a>

                                    <div class="p-2 d-flex">
                                        @if (User.IsInRole("Admin") || User.IsInRole("CampaignManager"))
                                        {
                                            <a asp-controller="Campaigns"
                                               asp-action="Details"
                                               asp-route-id="@campaign.Id"
                                               class="btn btn-sm btn-outline-secondary me-1"
                                               title="@Localizer["Btn_Details"]">
                                                <i class="bi bi-info-circle"></i>
                                            </a>

                                            <a asp-controller="Campaigns"
                                               asp-action="AssignStaff"
                                               asp-route-id="@campaign.Id"
                                               class="btn btn-sm btn-outline-secondary"
                                               title="@Localizer["Btn_AssignStaff"]">
                                                <i class="bi bi-people"></i>
                                            </a>
                                        }

                                        @if (User.IsInRole("Admin") || User.IsInRole("ClientContact"))
                                        {
                                            <a asp-controller="Campaigns"
                                               asp-action="UpdatePayment"
                                               asp-route-id="@campaign.Id"
                                               class="btn btn-sm btn-primary ms-1"
                                               title="@Localizer["Btn_RecordPayment"]">
                                                <i class="bi bi-cash-coin"></i>
                                            </a>
                                        }
                                    </div>
                                </div>
                            }
                        }
                    </div>

                    @if (User.IsInRole("Admin") || User.IsInRole("CampaignManager"))
                    {
                        <div class="p-3 border-top">
                            <a asp-controller="Campaigns"
                               asp-action="Create"
                               asp-route-clientId="@Model.SelectedClientId"
                               class="btn btn-sm btn-primary w-100">
                                <i class="bi bi-plus-circle me-1"></i> @Localizer["Btn_NewCampaign"]
                            </a>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center text-muted small py-5">
                    <i class="bi bi-arrow-left-circle fs-2 d-block mb-2"></i>
                    @Localizer["Select_Client"]
                </div>
            </div>
        }
    </div>

    <!-- ADVERTS -->
    <div class="col-lg-4">
        @if (Model.SelectedCampaignId.HasValue)
        {
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-0">
                    <div class="p-3 border-bottom d-flex align-items-center justify-content-between">
                        <div class="fw-semibold">
                            <i class="bi bi-megaphone me-2 text-muted"></i> @Localizer["Col_Adverts"]
                        </div>

                        <a asp-controller="Adverts" asp-action="Index" class="btn btn-sm btn-outline-secondary">
                            @Localizer["Btn_ViewAll"]
                        </a>
                    </div>

                    <div class="p-3">
                        @if (advertsCount == 0)
                        {
                            <div class="text-center text-muted small py-4">
                                <i class="bi bi-inboxes fs-3 d-block mb-2"></i>
                                @Localizer["No_Adverts"]
                            </div>
                        }
                        else
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var advert in Model.Adverts)
                                {
                                    <div class="list-group-item px-0 d-flex justify-content-between align-items-center">
                                        <div class="flex-grow-1 me-2">
                                            <div class="fw-semibold">@advert.Title</div>
                                            <div class="text-muted small">
                                                @Localizer["Lbl_Status"]: @advert.ProductionStatus
                                                <span class="mx-1">•</span>
                                                @advert.MediaChannel
                                            </div>
                                        </div>

                                        @if (User.IsInRole("Admin") || User.IsInRole("CampaignManager") || User.IsInRole("Staff"))
                                        {
                                            <a asp-controller="Adverts"
                                               asp-action="Details"
                                               asp-route-id="@advert.Id"
                                               class="btn btn-sm btn-outline-secondary"
                                               title="@Localizer["Btn_Details"]">
                                                <i class="bi bi-info-circle"></i>
                                            </a>
                                        }
                                    </div>
                                }
                            </div>
                        }

                        @if (User.IsInRole("Admin") || User.IsInRole("CampaignManager"))
                        {
                            <a asp-controller="Adverts"
                               asp-action="Create"
                               asp-route-campaignId="@Model.SelectedCampaignId"
                               class="btn btn-sm btn-primary w-100 mt-3">
                                <i class="bi bi-plus-circle me-1"></i> @Localizer["Btn_NewAdvert"]
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
        else if (Model.SelectedClientId.HasValue)
        {
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center text-muted small py-5">
                    <i class="bi bi-arrow-left-circle fs-2 d-block mb-2"></i>
                    @Localizer["Select_Campaign_To_View_Adverts"]
                </div>
            </div>
        }
        else
        {
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center text-muted small py-5">
                    <i class="bi bi-arrow-left-circle fs-2 d-block mb-2"></i>
                    @Localizer["Start_By_Selecting_Client"]
                </div>
            </div>
        }
    </div>
</div>