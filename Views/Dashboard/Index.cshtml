@model AgateApp.Models.DashboardViewModel

@{
    ViewData["Title"] = "Project Dashboard";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h4 mb-1">Project Dashboard</h1>
        <div class="text-muted small">Clients → Campaigns → Adverts</div>
    </div>
</div>

<div class="row g-3">

    <!-- 1) CLIENTS -->
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body pb-2">
                <div class="d-flex align-items-center justify-content-between">
                    <h2 class="h6 mb-0">
                        <i class="bi bi-building me-2"></i> Clients
                    </h2>
                    <span class="badge text-bg-light border">@Model.Clients.Count</span>
                </div>
            </div>

            <div class="list-group list-group-flush">
                @if (Model.Clients.Count == 0)
                {
                    <div class="p-3 text-muted text-center small">No clients assigned.</div>
                }

                @foreach (var client in Model.Clients)
                {
                    string activeClass = (client.Id == Model.SelectedClientId) ? "active" : "";
                    string textColor = (client.Id == Model.SelectedClientId) ? "text-white" : "text-body";

                    <a asp-action="Index"
                       asp-route-clientId="@client.Id"
                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @activeClass">

                        <span class="@textColor">
                            <i class="bi bi-briefcase me-2"></i> @client.CompanyName
                        </span>

                        @if (User.IsInRole("Admin") || User.IsInRole("ClientContact"))
                        {
                            <span class="badge rounded-pill bg-light text-dark border">
                                Edit <i class="bi bi-pencil-square"></i>
                            </span>
                        }
                        else
                        {
                            <i class="bi bi-chevron-right @textColor"></i>
                        }
                    </a>
                }
            </div>

            @if (User.IsInRole("Admin") || User.IsInRole("ClientContact"))
            {
                <div class="card-body border-top">
                    <a asp-controller="Clients"
                       asp-action="Create"
                       class="btn btn-sm btn-outline-primary w-100">
                        <i class="bi bi-person-plus-fill"></i> Add a Client
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- 2) CAMPAIGNS -->
    <div class="col-lg-4">
        @if (Model.SelectedClientId.HasValue)
        {
            <div class="card border-0 shadow-sm">
                <div class="card-body pb-2">
                    <div class="d-flex align-items-center justify-content-between">
                        <h2 class="h6 mb-0">
                            <i class="bi bi-kanban me-2"></i> Campaigns
                        </h2>
                        <span class="badge text-bg-light border">@Model.Campaigns.Count</span>
                    </div>
                </div>

                <div class="list-group list-group-flush">
                    @if (Model.Campaigns.Count == 0)
                    {
                        <div class="p-3 text-muted text-center small">No campaigns found.</div>
                    }

                    @foreach (var campaign in Model.Campaigns)
                    {
                        string activeClass = (campaign.Id == Model.SelectedCampaignId) ? "active" : "";
                        string textColor = (campaign.Id == Model.SelectedCampaignId) ? "text-white" : "text-body";

                        <div class="list-group-item p-0 d-flex justify-content-between align-items-center @activeClass">

                            <a asp-action="Index"
                               asp-route-clientId="@Model.SelectedClientId"
                               asp-route-campaignId="@campaign.Id"
                               class="flex-grow-1 p-3 text-decoration-none @textColor">

                                <div class="d-flex align-items-start justify-content-between gap-2">
                                    <h6 class="mb-1">@campaign.Title</h6>

                                    @if (campaign.AmountPaid >= campaign.ActualCost && campaign.ActualCost > 0)
                                    {
                                        <span class="badge bg-light text-success border border-success">Paid</span>
                                    }
                                    else if (campaign.AmountPaid > 0)
                                    {
                                        <span class="badge bg-light text-warning border border-warning">Partially Paid</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-secondary border">Unpaid</span>
                                    }
                                </div>

                                <div class="text-muted small mt-1">
                                    <i class="bi bi-person-check me-1"></i>
                                    Campaign
                                </div>
                            </a>

                            <div class="p-2 d-flex align-items-center gap-1">

                                @if (User.IsInRole("Admin") || User.IsInRole("CampaignManager"))
                                {
                                    <a asp-controller="Campaigns"
                                       asp-action="Details"
                                       asp-route-id="@campaign.Id"
                                       class="btn btn-sm btn-outline-secondary"
                                       title="Details">
                                        <i class="bi bi-info-circle"></i>
                                    </a>

                                    <a asp-controller="Campaigns"
                                       asp-action="AssignStaff"
                                       asp-route-id="@campaign.Id"
                                       class="btn btn-sm btn-outline-secondary"
                                       title="Assign Staff">
                                        <i class="bi bi-people"></i>
                                    </a>
                                }

                                @if (User.IsInRole("Admin") || User.IsInRole("ClientContact"))
                                {
                                    <a asp-controller="Campaigns"
                                       asp-action="UpdatePayment"
                                       asp-route-id="@campaign.Id"
                                       class="btn btn-sm btn-outline-success"
                                       title="Record Payment">
                                        <i class="bi bi-currency-dollar"></i>
                                    </a>
                                }

                            </div>
                        </div>
                    }
                </div>

                @if (User.IsInRole("Admin") || User.IsInRole("CampaignManager"))
                {
                    <div class="card-body border-top">
                        <a asp-controller="Campaigns"
                           asp-action="Create"
                           asp-route-clientId="@Model.SelectedClientId"
                           class="btn btn-sm btn-outline-primary w-100">
                            <i class="bi bi-plus-circle"></i> New Campaign
                        </a>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-light border mb-0">
                <i class="bi bi-arrow-left"></i> Select a client to view campaigns.
            </div>
        }
    </div>

    <!-- 3) ADVERTS -->
    <div class="col-lg-4">
        @if (Model.SelectedCampaignId.HasValue)
        {
            <div class="card border-0 shadow-sm">
                <div class="card-body pb-2">
                    <div class="d-flex align-items-center justify-content-between">
                        <h2 class="h6 mb-0">
                            <i class="bi bi-megaphone me-2"></i> Adverts
                        </h2>
                        <span class="badge text-bg-light border">@Model.Adverts.Count</span>
                    </div>
                </div>

                <div class="card-body pt-0">
                    @if (Model.Adverts.Count == 0)
                    {
                        <div class="text-muted text-center small py-3">No adverts yet.</div>
                    }
                    else
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var advert in Model.Adverts)
                            {
                                <div class="list-group-item px-0 d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1 me-2">
                                        <h6 class="mb-1">@advert.Title</h6>
                                        <div class="text-muted small">
                                            Status: @advert.ProductionStatus
                                            <span class="mx-1">•</span>
                                            @advert.MediaChannel
                                        </div>
                                    </div>

                                    @if (User.IsInRole("Admin") || User.IsInRole("CampaignManager") || User.IsInRole("Staff"))
                                    {
                                        <a asp-controller="Adverts"
                                           asp-action="Details"
                                           asp-route-id="@advert.Id"
                                           class="btn btn-sm btn-outline-secondary"
                                           title="Details">
                                            <i class="bi bi-info-circle"></i>
                                        </a>
                                    }
                                </div>
                            }
                        </div>
                    }

                    @if (User.IsInRole("Admin") || User.IsInRole("CampaignManager"))
                    {
                        <div class="pt-3">
                            <a asp-controller="Adverts"
                               asp-action="Create"
                               asp-route-campaignId="@Model.SelectedCampaignId"
                               class="btn btn-sm btn-outline-primary w-100">
                                <i class="bi bi-plus-circle"></i> New Advert
                            </a>
                        </div>
                    }
                </div>
            </div>
        }
        else if (Model.SelectedClientId.HasValue)
        {
            <div class="alert alert-light border mb-0">
                <i class="bi bi-arrow-left"></i> Select a campaign to view details.
            </div>
        }
    </div>

</div>
