@model AgateApp.Models.Campaign

@{
    ViewData["Title"] = "Delete Campaign";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h4 mb-1">Delete Campaign</h1>
        <div class="text-muted small">This action cannot be undone.</div>
    </div>

    <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="alert alert-danger d-flex align-items-start gap-2 mb-3">
            <i class="bi bi-exclamation-triangle-fill mt-1"></i>
            <div>
                <div class="fw-semibold">Are you sure you want to delete this campaign?</div>
                <div class="small">Deleting will permanently remove the record and related references.</div>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-12">
                <div class="fw-semibold mb-1">Campaign Summary</div>
                <div class="text-muted small">Review details before deleting.</div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">@Html.DisplayNameFor(model => model.Title)</div>
                <div class="fw-semibold">@Html.DisplayFor(model => model.Title)</div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">@Html.DisplayNameFor(model => model.Client)</div>
                <div>@Html.DisplayFor(model => model.Client.CompanyName)</div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">Planned Dates</div>
                <div class="text-muted small">
                    <i class="bi bi-calendar3 me-1"></i>
                    @Model.PlannedStartDate.ToString("dd MMM yyyy")
                    <span class="mx-1">→</span>
                    @Model.PlannedFinishDate.ToString("dd MMM yyyy")
                </div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">@Html.DisplayNameFor(model => model.ActualFinishDate)</div>
                <div>
                    @if (Model.ActualFinishDate != null)
                    {
                        @Model.ActualFinishDate.Value.ToString("dd MMM yyyy")
                    }
                    else
                    {
                        <span class="text-muted small">—</span>
                    }
                </div>
            </div>

            <hr class="my-3" />

            <div class="col-12">
                <div class="fw-semibold mb-1">Financials</div>
                <div class="text-muted small">Cost and payment tracking.</div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">@Html.DisplayNameFor(model => model.EstimatedCost)</div>
                <div>@Html.DisplayFor(model => model.EstimatedCost)</div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">@Html.DisplayNameFor(model => model.Budget)</div>
                <div>@Html.DisplayFor(model => model.Budget)</div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">@Html.DisplayNameFor(model => model.ActualCost)</div>
                <div>@Html.DisplayFor(model => model.ActualCost)</div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">@Html.DisplayNameFor(model => model.AmountPaid)</div>
                <div>@Html.DisplayFor(model => model.AmountPaid)</div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">@Html.DisplayNameFor(model => model.DatePaid)</div>
                <div>
                    @if (Model.DatePaid != null)
                    {
                        @Model.DatePaid.Value.ToString("dd MMM yyyy")
                    }
                    else
                    {
                        <span class="text-muted small">—</span>
                    }
                </div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">@Html.DisplayNameFor(model => model.Status)</div>
                <div>
                    <span class="badge bg-light text-dark border">
                        @Html.DisplayFor(model => model.Status)
                    </span>
                </div>
            </div>
        </div>

        <form asp-action="Delete" class="d-flex justify-content-end gap-2 mt-4">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-outline-secondary">
                Cancel
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
        </form>
    </div>
</div>
