@model AgateApp.Models.Campaign

@{
    ViewData["Title"] = "Record Payment";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h4 mb-1">Record Payment</h1>
        <div class="text-muted small">Update total paid amount and last payment date.</div>
    </div>

    <a asp-controller="Dashboard"
       asp-action="Index"
       asp-route-clientId="@Model.ClientId"
       class="btn btn-sm btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-7">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <form asp-action="UpdatePayment">
                    <input type="hidden" asp-for="Id" />

                    <!-- Read-only summary -->
                    <div class="border rounded-3 p-3 mb-3" style="background: rgba(0,0,0,.02); border-color: rgba(0,0,0,.08) !important;">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <div class="fw-semibold">
                                <i class="bi bi-cash-coin me-2"></i> Summary
                            </div>
                            <span class="badge bg-light text-dark border">Campaign</span>
                        </div>

                        <div class="row g-2 small">
                            <div class="col-md-4 text-muted">Client</div>
                            <div class="col-md-8">@Model.Client?.CompanyName</div>

                            <div class="col-md-4 text-muted">Campaign</div>
                            <div class="col-md-8 fw-semibold">@Model.Title</div>

                            <div class="col-md-4 text-muted">Budget</div>
                            <div class="col-md-8">@Model.Budget.ToString("C")</div>

                            <div class="col-md-4 text-muted">Actual Cost</div>
                            <div class="col-md-8 fw-semibold">
                                @Model.ActualCost.GetValueOrDefault().ToString("C")
                            </div>
                        </div>
                    </div>

                    <hr class="my-3" />

                    <!-- Editable fields -->
                    <div class="row g-3">
                        <div class="col-md-7">
                            <label asp-for="AmountPaid" class="form-label fw-semibold">Total Amount Paid</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="AmountPaid" class="form-control" />
                            </div>
                            <span asp-validation-for="AmountPaid" class="text-danger small"></span>
                            <div class="text-muted small mt-1">Enter the total sum received from the client so far.</div>
                        </div>

                        <div class="col-md-5">
                            <label asp-for="DatePaid" class="form-label fw-semibold">Last Payment Date</label>
                            <input asp-for="DatePaid" class="form-control" type="date" />
                            <span asp-validation-for="DatePaid" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-controller="Dashboard"
                           asp-action="Index"
                           asp-route-clientId="@Model.ClientId"
                           class="btn btn-outline-secondary">
                            Cancel
                        </a>

                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check2"></i> Save Payment Record
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
