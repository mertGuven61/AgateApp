@model AgateApp.Models.Campaign

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Campaign</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlannedStartDate" class="control-label"></label>
                <input asp-for="PlannedStartDate" class="form-control" />
                <span asp-validation-for="PlannedStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlannedFinishDate" class="control-label"></label>
                <input asp-for="PlannedFinishDate" class="form-control" />
                <span asp-validation-for="PlannedFinishDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActualFinishDate" class="control-label"></label>
                <input asp-for="ActualFinishDate" class="form-control" />
                <span asp-validation-for="ActualFinishDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstimatedCost" class="control-label"></label>
                <input asp-for="EstimatedCost" class="form-control" />
                <span asp-validation-for="EstimatedCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Budget" class="control-label"></label>
                <input asp-for="Budget" class="form-control" />
                <span asp-validation-for="Budget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActualCost" class="control-label"></label>
                <input asp-for="ActualCost" class="form-control" />
                <span asp-validation-for="ActualCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountPaid" class="control-label"></label>
                <input asp-for="AmountPaid" class="form-control" />
                <span asp-validation-for="AmountPaid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatePaid" class="control-label"></label>
                <input asp-for="DatePaid" class="form-control" />
                <span asp-validation-for="DatePaid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label">Client</label>

                @if (ViewBag.PreSelectedClientId != null)
                {
                    <input type="text" class="form-control" value="@ViewBag.ClientName" readonly style="background-color: #e9ecef;" />

                    <input type="hidden" asp-for="ClientId" value="@ViewBag.PreSelectedClientId" />
                }
                else
                {
                    <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                }
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    @if (ViewBag.PreSelectedClientId != null)
    {
        <!-- Return to dashboard -->
        <a asp-controller="Dashboard"
           asp-action="Index"
           asp-route-clientId="@ViewBag.RelatedClientId"
           asp-route-campaignId="@ViewBag.PreSelectedCampaignId"
           class="btn btn-secondary">
            &larr; Back to Dashboard
        </a>
    }
    else
    {
        <!-- Return to list -->
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
