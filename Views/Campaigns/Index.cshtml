@model IEnumerable<AgateApp.Models.Campaign>

@{
    ViewData["Title"] = "Campaigns";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h4 mb-1">Campaigns</h1>
        <div class="text-muted small">Manage and track campaigns by client, date, and status.</div>
    </div>

    @if (User.IsInRole("Admin") || User.IsInRole("CampaignManager"))
    {
        <a asp-action="Create" class="btn btn-primary btn-sm px-3">
            <i class="bi bi-plus-circle me-1"></i> Create New
        </a>
    }
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="border-bottom">
                    <tr>
                        <th class="ps-3">@Html.DisplayNameFor(model => model.Title)</th>
                        <th>@Html.DisplayNameFor(model => model.Client)</th>
                        <th>Dates</th>
                        <th>Status</th>
                        <th class="text-end pe-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="border-bottom">
                            <td class="ps-3">
                                <div class="fw-semibold">@Html.DisplayFor(modelItem => item.Title)</div>
                                <div class="text-muted small">ID: @item.Id</div>
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Client.CompanyName)
                            </td>

                            <td>
                                <div class="text-muted small">
                                    <i class="bi bi-calendar3 me-1"></i>
                                    @item.PlannedStartDate.ToShortDateString()
                                    <span class="mx-1">→</span>
                                    @item.PlannedFinishDate.ToShortDateString()
                                </div>
                            </td>

                            <td>
                                <span class="badge bg-light text-dark border">
                                    @item.Status
                                </span>
                            </td>

                            <td class="text-end pe-3">
                                <div class="d-inline-flex gap-1 flex-wrap justify-content-end">

                                    <a asp-action="Details"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary"
                                       title="Details">
                                        <i class="bi bi-info-circle"></i>
                                    </a>

                                    @if (User.IsInRole("Admin") || User.IsInRole("CampaignManager"))
                                    {
                                        <a asp-action="AssignStaff"
                                           asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-secondary"
                                           title="Assign Staff">
                                            <i class="bi bi-people"></i>
                                        </a>

                                        <a asp-action="Edit"
                                           asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-secondary"
                                           title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                        <a asp-action="Delete"
                                           asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-danger"
                                           title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @* Optional: Empty state *@
            @if (!Model.Any())
            {
                <div class="p-4 text-center text-muted small">
                    No campaigns found.
                </div>
            }
        </div>
    </div>
</div>
