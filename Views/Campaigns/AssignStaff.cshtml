@{
    ViewData["Title"] = "Assign Staff";
    var assignedStaff = ViewBag.AssignedStaff as List<string>;
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h4 mb-1">Assign Staff</h1>
        <div class="text-muted small">
            Campaign: <span class="fw-semibold">@ViewBag.CampaignTitle</span>
        </div>
    </div>

    <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back
    </a>
</div>

<div class="row g-3">
    <div class="col-lg-7">
        <div class="card border-0 shadow-sm">
            <div class="card-body">

                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h2 class="h6 mb-0">
                        <i class="bi bi-people me-2"></i> Current Team
                    </h2>
                    <span class="badge text-bg-light border">
                        @(assignedStaff != null ? assignedStaff.Count : 0)
                    </span>
                </div>

                <div class="list-group list-group-flush mb-3">
                    @if (assignedStaff != null)
                    {
                        if (assignedStaff.Count == 0)
                        {
                            <div class="py-3 text-muted text-center small">No staff assigned yet.</div>
                        }
                        else
                        {
                            foreach (var staff in assignedStaff)
                            {
                                <div class="list-group-item d-flex align-items-center justify-content-between">
                                    <div class="d-flex align-items-center gap-2">
                                        <i class="bi bi-person-fill text-primary"></i>
                                        <span>@staff</span>
                                    </div>
                                </div>
                            }
                        }
                    }
                    else
                    {
                        <div class="py-3 text-muted text-center small">No staff assigned yet.</div>
                    }
                </div>

                <hr class="my-3" />

                <h2 class="h6 mb-2">
                    <i class="bi bi-person-plus me-2"></i> Add New Staff
                </h2>

                <form asp-action="AssignStaff" method="post">
                    <input type="hidden" name="campaignId" value="@ViewBag.CampaignId" />

                    <div class="row g-2 align-items-end">
                        <div class="col-md-8">
                            <label class="form-label">Staff Email</label>
                            <input type="email"
                                   name="staffEmail"
                                   class="form-control"
                                   placeholder="staff@agate.com"
                                   required />
                            <div class="text-muted small mt-1">Enter the exact email address of the staff member.</div>
                        </div>

                        <div class="col-md-4 d-grid">
                            <button class="btn btn-primary" type="submit">
                                <i class="bi bi-check2-circle me-1"></i> Assign
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
