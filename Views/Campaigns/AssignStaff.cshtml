@{
    ViewData["Title"] = "Assign Staff";
    var assignedStaff = ViewBag.AssignedStaff as List<string>;
}

<h1>Assign Staff to: @ViewBag.CampaignTitle</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <h4>Current Team</h4>
        <ul class="list-group mb-4">
            @if (assignedStaff != null)
            {
                foreach (var staff in assignedStaff)
                {
                    <li class="list-group-item">@staff</li>
                }
                if (assignedStaff.Count == 0)
                {
                    <li class="list-group-item text-muted">No staff assigned yet.</li>
                }
            }
        </ul>

        <h4>Add New Staff</h4>
        <form asp-action="AssignStaff" method="post">
            <input type="hidden" name="campaignId" value="@ViewBag.CampaignId" />

            <div class="input-group mb-3">
                <input type="email" name="staffEmail" class="form-control" placeholder="Enter staff email (e.g. staff@agate.com)" required>
                <button class="btn btn-primary" type="submit">Assign</button>
            </div>
            <small class="text-muted">Enter the exact email address of the staff member.</small>
        </form>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>