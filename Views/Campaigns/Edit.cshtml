@model AgateApp.Models.Campaign

@{
    ViewData["Title"] = "Edit Campaign";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h4 mb-1">Edit Campaign</h1>
        <div class="text-muted small">Update dates, budget, and payment details.</div>
    </div>

    <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small mb-3"></div>

            <input type="hidden" asp-for="Id" />

            <div class="row g-3">
                <!-- Basic -->
                <div class="col-12">
                    <div class="fw-semibold mb-1">Basic Information</div>
                    <div class="text-muted small">Campaign title, status and client.</div>
                </div>

                <div class="col-md-6">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Status" class="form-label"></label>
                    <input asp-for="Status" class="form-control" />
                    <span asp-validation-for="Status" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ClientId" class="form-label">Client</label>
                    <select asp-for="ClientId" class="form-select" asp-items="ViewBag.ClientId"></select>
                    <span asp-validation-for="ClientId" class="text-danger small"></span>
                </div>

                <hr class="my-3" />

                <!-- Dates -->
                <div class="col-12">
                    <div class="fw-semibold mb-1">Dates</div>
                    <div class="text-muted small">Planned and actual timeline.</div>
                </div>

                <div class="col-md-6">
                    <label asp-for="PlannedStartDate" class="form-label"></label>
                    <input asp-for="PlannedStartDate" class="form-control" type="date" />
                    <span asp-validation-for="PlannedStartDate" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="PlannedFinishDate" class="form-label"></label>
                    <input asp-for="PlannedFinishDate" class="form-control" type="date" />
                    <span asp-validation-for="PlannedFinishDate" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ActualFinishDate" class="form-label"></label>
                    <input asp-for="ActualFinishDate" class="form-control" type="date" />
                    <span asp-validation-for="ActualFinishDate" class="text-danger small"></span>
                </div>

                <hr class="my-3" />

                <!-- Financials -->
                <div class="col-12">
                    <div class="fw-semibold mb-1">Financials</div>
                    <div class="text-muted small">Estimated/actual cost and payment tracking.</div>
                </div>

                <div class="col-md-6">
                    <label asp-for="EstimatedCost" class="form-label"></label>
                    <input asp-for="EstimatedCost" class="form-control" />
                    <span asp-validation-for="EstimatedCost" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Budget" class="form-label"></label>
                    <input asp-for="Budget" class="form-control" />
                    <span asp-validation-for="Budget" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ActualCost" class="form-label"></label>
                    <input asp-for="ActualCost" class="form-control" />
                    <span asp-validation-for="ActualCost" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="AmountPaid" class="form-label"></label>
                    <input asp-for="AmountPaid" class="form-control" />
                    <span asp-validation-for="AmountPaid" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="DatePaid" class="form-label"></label>
                    <input asp-for="DatePaid" class="form-control" type="date" />
                    <span asp-validation-for="DatePaid" class="text-danger small"></span>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Cancel
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check2"></i> Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
