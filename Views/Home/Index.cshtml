@{
    ViewData["Title"] = "Home";
}

<div class="d-flex align-items-center justify-content-center" style="min-height:60vh;">
    <div class="text-center">

        <h1 class="fw-semibold mb-3">
            Welcome to <span class="text-primary">Agate</span>
        </h1>

        <p class="text-muted mb-4" style="max-width:520px;">
            This is the managerial information system of the Agate Company.
            Access clients, campaigns, and adverts from a single, clean dashboard.
        </p>

        <div class="d-flex justify-content-center gap-2 flex-wrap">
            <a asp-controller="Dashboard"
               asp-action="Index"
               class="btn btn-primary px-4">
                <i class="bi bi-speedometer2 me-1"></i> Go to Dashboard
            </a>

            <a asp-controller="Campaigns"
               asp-action="Index"
               class="btn btn-outline-secondary px-4">
                <i class="bi bi-kanban me-1"></i> View Campaigns
            </a>
        </div>

    </div>
</div>
