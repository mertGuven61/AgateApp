@model AgateApp.Models.Client

@{
    ViewData["Title"] = "Delete Client";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h4 mb-1">Delete Client</h1>
        <div class="text-muted small">This action cannot be undone.</div>
    </div>

    <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="alert alert-danger d-flex align-items-start gap-2 mb-3">
            <i class="bi bi-exclamation-triangle-fill mt-1"></i>
            <div>
                <div class="fw-semibold">Are you sure you want to delete this client?</div>
                <div class="small">Deleting will permanently remove the record.</div>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-12">
                <div class="fw-semibold mb-1">Client Summary</div>
                <div class="text-muted small">Review details before deleting.</div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">@Html.DisplayNameFor(model => model.CompanyName)</div>
                <div class="fw-semibold">@Html.DisplayFor(model => model.CompanyName)</div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">@Html.DisplayNameFor(model => model.City)</div>
                <div>@Html.DisplayFor(model => model.City)</div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">@Html.DisplayNameFor(model => model.AddressLine1)</div>
                <div>@Html.DisplayFor(model => model.AddressLine1)</div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">@Html.DisplayNameFor(model => model.AddressLine2)</div>
                <div>@Html.DisplayFor(model => model.AddressLine2)</div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">@Html.DisplayNameFor(model => model.PostalCode)</div>
                <div>@Html.DisplayFor(model => model.PostalCode)</div>
            </div>

            <hr class="my-3" />

            <div class="col-md-6">
                <div class="text-muted small">@Html.DisplayNameFor(model => model.ContactPersonName)</div>
                <div>@Html.DisplayFor(model => model.ContactPersonName)</div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">@Html.DisplayNameFor(model => model.ContactEmail)</div>
                <div>
                    <a class="text-decoration-none" href="mailto:@Model.ContactEmail">
                        @Html.DisplayFor(model => model.ContactEmail)
                    </a>
                </div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">@Html.DisplayNameFor(model => model.PhoneNumber)</div>
                <div>
                    <a class="text-decoration-none" href="tel:@Model.PhoneNumber">
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </a>
                </div>
            </div>
        </div>

        <form asp-action="Delete" class="d-flex justify-content-end gap-2 mt-4">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-outline-secondary">
                Cancel
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
        </form>
    </div>
</div>
