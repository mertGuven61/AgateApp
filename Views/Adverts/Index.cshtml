@model IEnumerable<AgateApp.Models.Advert>

@{
    ViewData["Title"] = "Adverts";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h4 mb-1">Adverts</h1>
        <div class="text-muted small">All adverts across campaigns.</div>
    </div>

    <a asp-action="Create" class="btn btn-primary btn-sm px-3">
        <i class="bi bi-plus-circle me-1"></i> Create New
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="border-bottom">
                    <tr>
                        <th class="ps-3">@Html.DisplayNameFor(model => model.Title)</th>
                        <th>@Html.DisplayNameFor(model => model.MediaChannel)</th>
                        <th>@Html.DisplayNameFor(model => model.ProductionStatus)</th>
                        <th>Run Dates</th>
                        <th class="text-end">@Html.DisplayNameFor(model => model.Cost)</th>
                        <th>@Html.DisplayNameFor(model => model.Campaign)</th>
                        <th class="text-end pe-3">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="border-bottom">
                            <td class="ps-3">
                                <div class="fw-semibold">
                                    @Html.DisplayFor(modelItem => item.Title)
                                </div>
                                <div class="text-muted small">
                                    ID: @item.Id
                                </div>
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.MediaChannel)
                            </td>

                            <td>
                                <span class="badge bg-light text-dark border">
                                    @Html.DisplayFor(modelItem => item.ProductionStatus)
                                </span>
                            </td>

                            <td>
                                <div class="text-muted small">
                                    <i class="bi bi-calendar3 me-1"></i>
                                    @item.ScheduledRunDateStart.ToShortDateString()
                                    <span class="mx-1">→</span>
                                    @item.ScheduledRunDateEnd.ToShortDateString()
                                </div>
                            </td>

                            <td class="text-end">
                                <span class="fw-semibold">
                                    @Html.DisplayFor(modelItem => item.Cost)
                                </span>
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Campaign.Title)
                            </td>

                            <td class="text-end pe-3">
                                <div class="d-inline-flex gap-1">

                                    <a asp-action="Details"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary"
                                       title="Details">
                                        <i class="bi bi-info-circle"></i>
                                    </a>

                                    <a asp-action="Edit"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary"
                                       title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>

                                    <a asp-action="Delete"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-danger"
                                       title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="p-4 text-center text-muted small">
                    No adverts found.
                </div>
            }
        </div>
    </div>
</div>
