@model AgateApp.Models.Advert

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Advert</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MediaChannel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MediaChannel)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductionStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductionStatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduledRunDateStart)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ScheduledRunDateStart)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduledRunDateEnd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ScheduledRunDateEnd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Campaign)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Campaign.Title)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<hr class="my-5" />

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-journal-text"></i> Advert Notes</h5>
            </div>
            <div class="card-body">

                <!-- Not Ekleme Formu -->
                @if (User.IsInRole("Admin") || User.IsInRole("CampaignManager") || User.IsInRole("Staff"))
                {
                    <form asp-action="AddNote" method="post" class="mb-4">
                        <input type="hidden" name="advertId" value="@Model.Id" />
                        <div class="input-group">
                            <textarea name="noteText" class="form-control" rows="2" placeholder="Write a note regarding this advert..." required></textarea>
                            <button class="btn btn-primary" type="submit">
                                <i class="bi bi-send"></i> Add Note
                            </button>
                        </div>
                    </form>
                }

                <!-- Not Listesi -->
                <div class="notes-container">
                    @if (Model.Notes != null && Model.Notes.Any())
                    {
                        @foreach (var note in Model.Notes)
                        {
                            <div class="alert alert-secondary border-0 bg-light mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <!-- Yazar Adý -->
                                    <strong class="text-primary">
                                        <i class="bi bi-person-fill"></i> @note.AuthorName
                                    </strong>
                                    <!-- Tarih -->
                                    <small class="text-muted">
                                        @note.CreatedAt.ToString("dd MMM yyyy HH:mm")
                                    </small>
                                </div>
                                <!-- Not Metni -->
                                <p class="mb-0 text-dark" style="white-space: pre-wrap;">@note.NoteText</p>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">No notes added yet.</p>
                    }
                </div>

            </div>
        </div>
    </div>
</div>