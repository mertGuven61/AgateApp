@model AgateApp.Models.Advert

@{
    ViewData["Title"] = "Advert Details";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h4 mb-1">Advert Details</h1>
        <div class="text-muted small">View advert information and internal notes.</div>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-sm btn-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
    </div>
</div>

<div class="card border-0 shadow-sm mb-3">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-12">
                <div class="fw-semibold mb-1">Summary</div>
                <div class="text-muted small">Core advert details.</div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">@Html.DisplayNameFor(model => model.Title)</div>
                <div class="fw-semibold">@Html.DisplayFor(model => model.Title)</div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">@Html.DisplayNameFor(model => model.Campaign)</div>
                <div>@Html.DisplayFor(model => model.Campaign.Title)</div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">@Html.DisplayNameFor(model => model.MediaChannel)</div>
                <div>@Html.DisplayFor(model => model.MediaChannel)</div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">@Html.DisplayNameFor(model => model.ProductionStatus)</div>
                <div>
                    <span class="badge bg-light text-dark border">
                        @Html.DisplayFor(model => model.ProductionStatus)
                    </span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">Run Dates</div>
                <div class="text-muted small">
                    <i class="bi bi-calendar3 me-1"></i>
                    @Model.ScheduledRunDateStart.ToString("dd MMM yyyy")
                    <span class="mx-1">→</span>
                    @Model.ScheduledRunDateEnd.ToString("dd MMM yyyy")
                </div>
            </div>

            <div class="col-md-6">
                <div class="text-muted small">@Html.DisplayNameFor(model => model.Cost)</div>
                <div class="fw-semibold">@Html.DisplayFor(model => model.Cost)</div>
            </div>
        </div>
    </div>
</div>

<div class="row g-3">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h2 class="h6 mb-0">
                        <i class="bi bi-journal-text me-2"></i> Advert Notes
                    </h2>
                    <span class="badge text-bg-light border">
                        @(Model.Notes != null ? Model.Notes.Count : 0)
                    </span>
                </div>

                <div class="text-muted small mb-3">
                    Notes are visible internally for tracking progress and communication.
                </div>

                @if (User.IsInRole("Admin") || User.IsInRole("CampaignManager") || User.IsInRole("Staff"))
                {
                    <form asp-action="AddNote" method="post" class="mb-3">
                        <input type="hidden" name="advertId" value="@Model.Id" />

                        <div class="mb-2">
                            <textarea name="noteText"
                                      class="form-control"
                                      rows="3"
                                      placeholder="Write a note regarding this advert..."
                                      required></textarea>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button class="btn btn-primary btn-sm" type="submit">
                                <i class="bi bi-send"></i> Add Note
                            </button>
                        </div>
                    </form>

                    <hr class="my-3" />
                }

                <div class="notes-container">
                    @if (Model.Notes != null && Model.Notes.Any())
                    {
                        @foreach (var note in Model.Notes)
                        {
                            <div class="border rounded-3 p-3 mb-2" style="background: rgba(0,0,0,.02); border-color: rgba(0,0,0,.08) !important;">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <div class="fw-semibold">
                                        <i class="bi bi-person-fill text-primary"></i> @note.AuthorName
                                    </div>
                                    <small class="text-muted">
                                        @note.CreatedAt.ToString("dd MMM yyyy HH:mm")
                                    </small>
                                </div>

                                <div class="text-body small" style="white-space: pre-wrap;">
                                    @note.NoteText
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-muted text-center small py-3">
                            No notes added yet.
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>
