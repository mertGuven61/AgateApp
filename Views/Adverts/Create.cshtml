@model AgateApp.Models.Advert

@{
    ViewData["Title"] = "Create Advert";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h4 mb-1">Create Advert</h1>
        <div class="text-muted small">Add a new advert to a campaign.</div>
    </div>

    @if (ViewBag.PreSelectedCampaignId != null)
    {
        <a asp-controller="Dashboard"
           asp-action="Index"
           asp-route-clientId="@ViewBag.RelatedClientId"
           asp-route-campaignId="@ViewBag.PreSelectedCampaignId"
           class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    }
    else
    {
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    }
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small mb-3"></div>

            <div class="row g-3">
                <!-- Basic -->
                <div class="col-12">
                    <div class="fw-semibold mb-1">Basic Information</div>
                    <div class="text-muted small">Core advert settings.</div>
                </div>

                <div class="col-md-6">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MediaChannel" class="form-label"></label>
                    <input asp-for="MediaChannel" class="form-control" />
                    <span asp-validation-for="MediaChannel" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ProductionStatus" class="form-label"></label>
                    <input asp-for="ProductionStatus" class="form-control" />
                    <span asp-validation-for="ProductionStatus" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="CampaignId" class="form-label">Campaign</label>

                    @if (ViewBag.PreSelectedCampaignId != null)
                    {
                        <input type="text"
                               class="form-control"
                               value="@ViewBag.CampaignTitle"
                               readonly
                               style="background-color: #e9ecef;" />

                        <input type="hidden" asp-for="CampaignId" value="@ViewBag.PreSelectedCampaignId" />
                    }
                    else
                    {
                        <select asp-for="CampaignId"
                                class="form-select"
                                asp-items="ViewBag.CampaignId">
                        </select>
                    }

                    <span asp-validation-for="CampaignId" class="text-danger small"></span>
                </div>

                <hr class="my-3" />

                <!-- Schedule & Cost -->
                <div class="col-12">
                    <div class="fw-semibold mb-1">Schedule & Cost</div>
                    <div class="text-muted small">Run dates and budget.</div>
                </div>

                <div class="col-md-6">
                    <label asp-for="ScheduledRunDateStart" class="form-label"></label>
                    <input asp-for="ScheduledRunDateStart" class="form-control" type="date" />
                    <span asp-validation-for="ScheduledRunDateStart" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ScheduledRunDateEnd" class="form-label"></label>
                    <input asp-for="ScheduledRunDateEnd" class="form-control" type="date" />
                    <span asp-validation-for="ScheduledRunDateEnd" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Cost" class="form-label"></label>
                    <input asp-for="Cost" class="form-control" />
                    <span asp-validation-for="Cost" class="text-danger small"></span>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                @if (ViewBag.PreSelectedCampaignId != null)
                {
                    <a asp-controller="Dashboard"
                       asp-action="Index"
                       asp-route-clientId="@ViewBag.RelatedClientId"
                       asp-route-campaignId="@ViewBag.PreSelectedCampaignId"
                       class="btn btn-outline-secondary">
                        Cancel
                    </a>
                }
                else
                {
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        Cancel
                    </a>
                }

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check2"></i> Create Advert
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
