@model AgateApp.Models.Advert

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Advert</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MediaChannel" class="control-label"></label>
                <input asp-for="MediaChannel" class="form-control" />
                <span asp-validation-for="MediaChannel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductionStatus" class="control-label"></label>
                <input asp-for="ProductionStatus" class="form-control" />
                <span asp-validation-for="ProductionStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduledRunDateStart" class="control-label"></label>
                <input asp-for="ScheduledRunDateStart" class="form-control" />
                <span asp-validation-for="ScheduledRunDateStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduledRunDateEnd" class="control-label"></label>
                <input asp-for="ScheduledRunDateEnd" class="form-control" />
                <span asp-validation-for="ScheduledRunDateEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CampaignId" class="control-label mt-2">Campaign</label>

                @if (ViewBag.PreSelectedCampaignId != null)
                {
                    <input type="text" class="form-control" value="@ViewBag.CampaignTitle" readonly style="background-color: #e9ecef;" />

                    <input type="hidden" asp-for="CampaignId" value="@ViewBag.PreSelectedCampaignId" />
                }
                else
                {
                    <select asp-for="CampaignId" class="form-control" asp-items="ViewBag.CampaignId"></select>
                }
                <span asp-validation-for="CampaignId" class="text-danger"></span>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-3" />
            </div>
            
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    @if (ViewBag.PreSelectedCampaignId != null)
    {
        <!-- Return to dashboard -->
        <a asp-controller="Dashboard"
           asp-action="Index"
           asp-route-clientId="@ViewBag.RelatedClientId"
           asp-route-campaignId="@ViewBag.PreSelectedCampaignId"
           class="btn btn-secondary">
            &larr; Back to Dashboard
        </a>
    }
    else
    {
        <!-- Return to list  -->
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
