@page
@using AgateApp.Areas.Identity.Pages.Account
@model RegisterModel
@{
    ViewData["Title"] = "Create New User";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-person-plus-fill"></i> Admin Panel: Create User</h4>
            </div>
            <div class="card-body bg-light">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <!-- 1. USERNAME -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Username" class="form-control" autocomplete="off" placeholder="username" />
                        <label asp-for="Input.Username">Username</label>
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>

                    <!-- 2. EMAIL -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="off" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- 3. ROLE SELECTION (YENİ) -->
                    <div class="form-floating mb-3">
                        <select asp-for="Input.Role" asp-items="Model.RolesList" class="form-select">
                            <option value="">-- Select a Role --</option>
                        </select>
                        <label asp-for="Input.Role">Role / Position</label>
                        <span asp-validation-for="Input.Role" class="text-danger"></span>
                    </div>

                    <!-- 4. PASSWORD -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="password" />
                                <label asp-for="Input.Password">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="password" />
                                <label asp-for="Input.ConfirmPassword">Confirm</label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-danger">Create User</button>
                </form>
            </div>
        </div>
        <div class="mt-3 text-center">
            <a href="/" class="btn btn-outline-secondary">Back to Dashboard</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}